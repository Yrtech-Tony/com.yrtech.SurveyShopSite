@{
    Layout = "~/Views/Report/_ReportLayout.cshtml";
    ViewBag.Title = "用户查询";
}
<style>
    .operation {
        padding: 10px 0px;
        text-align: right;
    }

        .operation .btn {
            width: 100px;
        }

    .shadow-panel {
        display: flexbox;
        border-radius: 6px;
        box-shadow: 1.9px 3.8px 10px rgba(0, 0, 0, 0.035), 15px 30px 80px rgba(0, 0, 0, 0.07);
        padding: 10px;
        float: left;
    }


    element.style {
    }

    .condition {
        display: inline-flexbox;
        flex-flow: row wrap;
        -ms-flex-pack: justify;
        justify-content: space-between;
        margin-bottom: 10px;
        padding: 20px 30px 20px 23px;
        border-bottom: 1px solid #f2f3f4;
        background: #fff;
        box-shadow: 0 1px 4px 0 #e5e7ea;
        border-radius: 3px;
    }
</style>

<div id="container" class="requir col-md-10">
    <div class="form-inline condition" style="line-height:40px;">
        <div class="form-group" style="width:20%">
            <label class="control-label">账号:</label>
            <input id="AccountIdQuery" type="text" class="form-control" placeholder="账号">
        </div>
        <div class="form-group" style="width:20%">
            <label class="control-label">姓名:</label>
            <input id="AccountNameQuery" type="text" class="form-control" placeholder="姓名">
        </div>
        <div class="form-group" style="width:8%">
            <button id="btnSearch" class="btn btn-primary">查询</button>
        </div>
    </div>

    <div class="clearfix"></div>
    <div class="list" style="overflow:auto;width:100%">
        <div class="comm-table-div table-responsive">
            <table id="account-table" class="table table-bordered">
                <thead>
                    <tr>
                        <th width="120">账号</th>
                        <th width="120">密码</th>
                        <th width="150">姓名</th>
                        <th width="180">邮箱</th>
                        <th width="120">电话</th>
                        <th width="140">添加时间</th>
                        <th width="140">修改时间</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <div id="pagination" class="pull-right">
        <ul id="pageUl"></ul>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/api.js?20230428"></script>
    <script>
        $(function () {
            // bindRoleTypeSelect('B');

            //查询
            $("#btnSearch").click(function () {
                var params = getParams();

                if (!params) return;
                loadShopAccount(params);
            }).trigger("click");
        })

        function getParams() {
            return {
                tenantId: loginUser.TenantId,
                brandId: loginUser.BrandList[0].BrandId,
                userId: '',
                accountId: $("#AccountIdQuery").val(),
                accountName: $("#AccountNameQuery").val(),
                roleTypeCode: "",
                telNO: '',
                email: ''
            };
        }
    </script>
}

